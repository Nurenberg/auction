{
  "name": "horizontalwalk/auction",
  "type": "project",
  "description": "auction",
  "license": "BSD-3-Clause",
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "require": {
    "php": "^7.4",
    "php-di/php-di": "^6.0",
    "ramsey/uuid": "^4.1",
    "slim/psr7": "^1.3",
    "slim/slim": "^4.7",
    "symfony/console": "^5.2",
    "webmozart/assert": "^1.10"
  },
  "require-dev": {
    "overtrue/phplint": "^2.3",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.6",
    "vimeo/psalm": "^4.7"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  },
  "scripts": {
    "lint": "phplint",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "psalm": "psalm",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --testsuite=unit --coverage-xml var/coverage.xml",
    "app": "php bin/app.php --ansi"
  }
}
